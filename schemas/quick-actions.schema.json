{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "actions": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9]+$": {
                    "type": "object",
                    "properties": {
                        "keybind": {
                            "type": "string"
                        },
                        "cmd": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "vim": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "auto": {
            "type": "object",
            "patternProperties": {
                "^(onSave|onOpen|onExit)$": {
                    "$ref": "#/definitions/autoCmd"
                }
            },
            "additionalProperties": false
        }
    },
    "definitions": {
        "autoCmd": {
            "type": "object",
            "properties": {
                "cmd": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "vim": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
